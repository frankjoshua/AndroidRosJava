<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_fuzz">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp">

        <com.tesseractmobile.pocketbot.views.CartoonEyeView
            android:id="@+id/eyeViewLeft"
            android:layout_width="@dimen/width_eye_cartoon"
            android:layout_height="@dimen/height_eye_cartoon"
            android:layout_alignTop="@+id/eyeViewRight"
            android:layout_alignParentLeft="true"/>

        <com.tesseractmobile.pocketbot.views.CartoonEyeView
            android:id="@+id/eyeViewRight"
            android:layout_width="@dimen/width_eye_cartoon"
            android:layout_height="@dimen/height_eye_cartoon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <com.tesseractmobile.pocketbot.views.CartoonMouthView
            android:id="@+id/mouthView"
            android:layout_width="@dimen/width_mouth_cartoon"
            android:layout_height="@dimen/height_mouth_cartoon"
            android:layout_below="@+id/eyeViewLeft"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_mouth"
            android:background="@drawable/staticmouth"
            android:textSize="@dimen/text_size_mouth"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
        <ProgressBar
            android:id="@+id/pbSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>